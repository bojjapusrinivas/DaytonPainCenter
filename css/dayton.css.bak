@charset "utf-8";
/* CSS Document */

body{
	
background:#fff !important;
background-image:none !important;	
}
/*======================
		Top Nav
=======================*/

.dayton_logo{
	width:360px !important;
	height:auto !important;
}

.dayton_navbar{
	min-height: 90px;
}

.dayton_nav{
	margin-top:18px !important;
	
}

.profile_img{
	width:30% !important;	
	
}

/*======================
		Banner 
=======================*/


.well.well-trans{
	background:rgba(255,255,255,0.8)!important;
	box-shadow:0 0px 10px rgba(0,0,0,0.6);
}

.h-ultra{
	text-align: center !important;
	margin-bottom: 40px !important;
	text-transform: uppercase;
	color: #2B3A7D;
	
}

.lead-list li{
	font-weight:500;
	color:rgba(0,0,0,0.8);
	font-size:18px;	
}

.h-light{
	margin-bottom:10px !important;
}


.doct_img_thumb{
	
	width:100%;
	height:auto;
}

.home-section{
	padding-top:10px !important;	
	
}

.footer{
	background-color:#fff !important;
	
}

/*====================
	Appointment PAGE
=====================*/
.tab_block {
	float:none;
	margin:0 auto;
	margin-top:20px;
		
}
/*====================
	doctor PAGE
=====================*/
.doctor_gallery{
	margin-top:20px !important;	
	width:90%;
	margin:0 auto;
	overflow:auto;
	height:auto;
}

.cbp-l-grid-team-position{
	height:450px !important;
}

.cbp-item[style]{
	height:300px !important;
}


/*====================
	ADDRES PAGE
=====================*/

.address_pannel{
	overflow:auto;
	height:auto;
	box-sizing:border-box;
}

.direction_title{
	background:#40B6BB;
	color:#fff;
	font-weight:bold;
	font-size:18px;
	
}

.direction_list{
	margin:5px 16px;
	padding:0px 
}

.direction_list li{
	margin-bottom:10px;	
}
/*====================
	FAQ PAGE
=====================*/

.content_box{
	padding-top:160px;	
}

.dayton_panel_heding_bg {
	background-color:#3FBBC0 !important;
	background:#3FBBC0 !important;
	color:#fff !important;
	font-weight:bold;
	font-size:18px !important;
	
}

.faq_address{
	margin-left:24px;	
	
}

.app_links a{ text-decoration:underline;
color:#333 !important;
font-weight:bold;
font-size:13px;
		
}

.app_links a:hover{
	color:#3FBBC0 !important;
}
